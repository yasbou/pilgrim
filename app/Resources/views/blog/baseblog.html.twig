<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}Notre Blog{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styleHomeBlog.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styleshow.css') }}">
        <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Mukta+Mahee:300" rel="stylesheet">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}



        <div class="header">

          {% if is_granted('IS_AUTHENTICATED_FULLY') %}

          <p id="user">Bonjour {{ app.user.username }} </p>


          {% endif %}


          <ul>
            <a href="{{path('homepage')}}"><li>ACCUEIL</li></a>
            <a href="{{path('categories')}}"><li>CATÉGORIES</li></a>
            <a href="{{path('apropos')}}"><li>A PROPOS</li></a>
            <a href="{{path('contact')}}"><li>CONTACT</li></a>
          </ul>
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}

          <a class='log' href="{{path('logout')}}">Déconnexion</a>

          {% else %}

          <a class="log" href="{{path('login')}}">Connexion</a>

          {% endif %}

        </div>

        <h1><span>LE BLOG</span> DE NAIMA</h1>

        {% endblock %}



        {% block javascripts %}
        <script
			     src="http://code.jquery.com/jquery-3.3.1.min.js"
			     integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
		       crossorigin="anonymous">
        </script>
        <script language="javascript">
    // On crée une variable JC dans le template
    // dans une balise script afin que les scripts JS suivants
    // aient accès à cette variable
    ajaxCheckNumberURL = '{{ path('commentaires_register') }}';
</script>
        <script
           src="http://code.jquery.com/jquery-3.3.1.min.js"
           integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
           crossorigin="anonymous">
        </script>



        <script src= "{{asset("js/commentaire.js")}}" type="text/javascript"></script>


        <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = 'https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.12';
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

        {% endblock %}
    </body>
</html>
