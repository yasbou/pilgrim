{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
{{ parent() }}
<body>
  <div class="bodyadmin">
    <h1>Categories list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorienom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('blog_categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.categorieNom }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary btn-sm" href="{{ path('blog_categories_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-warning btn-sm"  href="{{ path('blog_categories_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-success" href="{{ path('blog_categories_new') }}">Create a new category</a>
        </li>
    </ul>

    </div>
  </body>
{% endblock %}
