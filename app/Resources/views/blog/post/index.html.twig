{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
{{ parent() }}
{% include 'admin/header.html.twig' %}
<div class="bodyadmin">


    <h1>Posts list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Résumé</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('blog_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.titre }}</td>
                <td>{{ post.auteur }}</td>
                <td>{% if post.date %}{{ post.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ post.resume }}</td>
                <td>{{ post.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary btn-sm" href="{{ path('blog_post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-warning btn-sm" href="{{ path('blog_post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-success" href="{{ path('blog_post_new') }}">Create a new post</a>
        </li>
    </ul>
    </div>
{% endblock %}
