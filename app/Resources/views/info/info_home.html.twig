{% extends 'info/baseinfo.html.twig' %}

{% block body %}
{{parent()}}


  <h1>Toute les infos incontournables pour préparer au mieux votre départ.</h1>
  {% include 'widget/meteo.html.twig'%}
  {% include 'widget/convertisseur.html.twig'%}
  {% include 'widget/table.html.twig'%}
  {% include 'widget/playlist.html.twig'%}
  <main>

    {% for I in infos %}
    <div class="card-deck">
  <div class="card">
    <img class="card-img-top" src="{{asset('uploads/'~ I.image)}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{I.titre}}</h5>
      <a class="card-text" href="{{path('show_info', {'id': I.id})}}">En savoir plus</a>
    </div>
  </div>
</div>
{% endfor %}

{% endblock %}
