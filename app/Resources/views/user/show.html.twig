{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
{{ parent() }}
<div class="bodyadmin">
    <h1>User</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary btn-sm" href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-warning btn-sm" href="{{ path('admin_user_edit', { 'id': user.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger btn-sm" >
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
{% endblock %}
